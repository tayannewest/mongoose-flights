<%- include('../partials/html-head') %>
<link rel='stylesheet' href='/stylesheets/destinations/new.css' />
<%- include('../partials/nav') %>

  <main>
  <h1>Enter a New Flight</h1>
  <form action="/flights" method="POST">
    <label >Airline
      <select name="airline" required>
        <option value=""></option>
        <option value="American">American</option>
        <option value="Southwest">Southwest</option>
        <option value="United">United</option>
      </select>
    <label>Airport
      <select name="airport">
        <option value="AUS">AUS</option>
        <option value="DEN" selected>DEN</option>
        <option value="DFW">DFW</option>
        <option value="LAX">LAX</option>
        <option value="SAN">SAN</option>
      </select>
    </label><br>
    <label>Flight Number
      <input type="number" name="flightNo" placeholder="10 - 9999" required>
    </label><br>
    <label>Departure Date:
      <input type="datetime-local" name="departs">
    </label><br>
    <button type="submit">Add Flight</button>
</main>

<%- include('../partials/footer') %>